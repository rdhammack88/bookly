{
    "name": "Bookly",
    "version": "1.0",
    "description": "Bookmarks Librarian",
    "permissions": ["activeTab", "tabs", "http://*/*", "https://*/*", "bookmarks"],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["../src/background.js"]
    }],
    "background": {
        "scripts": ["../src/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Save opened tabs",
        "default_icon": "../imgs/icon.png"
    },
    "manifest_version": 2
}